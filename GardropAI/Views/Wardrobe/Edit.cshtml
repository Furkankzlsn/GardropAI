@model GardropAI.Models.ClothingItemModel

<h2>👕 Kıyafet Düzenle</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Kıyafet Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Type" class="form-label">Tür</label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="Color" class="form-label">Renk</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="Season" class="form-label">Mevsim</label>
        <input asp-for="Season" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="Material" class="form-label">Kumaş</label>
        <input asp-for="Material" class="form-control" />
    </div>
    <div class="col-md-12">
        <label asp-for="Style" class="form-label">Stil</label>
        <input asp-for="Style" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="/Wardrobe/Index" class="btn btn-secondary">İptal</a>
    </div>
</form>
